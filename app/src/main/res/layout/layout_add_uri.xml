<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_link_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/_10sdp"
    android:background="@drawable/alert_background">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_margin="@dimen/_5sdp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_link"
        app:tint="@android:color/white" />

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_toEndOf="@id/icon"
        android:text="Add URI"
        android:textColor="@android:color/white"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_text_uri"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_35sdp"
        android:layout_below="@id/icon"
        android:layout_marginStart="@dimen/_12sdp"
        android:background="@null"
        android:hint="Enter Uri"
        android:imeOptions="actionDone"
        android:importantForAutofill="no"
        android:inputType="textUri"
        android:textColor="@android:color/white"
        android:textColorHint="@color/Icon"
        android:textSize="@dimen/_16ssp" />

    <TextView
        android:id="@+id/add_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_uri"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/_12sdp"
        android:text="Add"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_18ssp" />

    <TextView
        android:id="@+id/cancel_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_uri"
        android:layout_margin="@dimen/_12sdp"
        android:layout_toStartOf="@id/add_text"
        android:text="Cancel"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/_18ssp" />

</RelativeLayout>